<div class="overflow-hidden px-3 py-10 bg-blue-400 flex justify-center">
    <div class="w-full max-w-xs ">
    <form class="login-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                Title
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="text" placeholder="Email">
        </div>
         <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_notes">
                Content
            </label>
            {{#if isCuratorRoute}}
            <p class="bg-grey-100" id="curate_notes">{{trip.notes}}</p>
            {{else}}
            <textarea class="shadow bg-white appearance-none border rounded w-full resize-y h-24 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_notes" type="text" placeholder="Notes..."></textarea>
            {{/if}}
        </div>
        <div class="flex items-center justify-between">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Post
            </button>
        </div>
    </form>
    </div>
</div>
{{#content "scripts"}}
    <script src="/js/login.js"></script>
{{/content}}